<div class="title">
    <h2>Edit Project</h2>
</div>

<div class="inner-container">
    <div class="pane">
        <div class="input-group">
            <label>Name</label>
            {{input type="text"}}
        </div>
        <div class="input-group">
            <label>Description</label>
            {{textarea rows=3}}
        </div>
        <div class="input-group">
            <label>Active</label>
            {{input type="checkbox"}}
        </div>
        <span id="save-btn" class="btn green-btn">Save</span>
    </div>
</div>
