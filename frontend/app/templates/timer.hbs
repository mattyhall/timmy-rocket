<div class="title">
    <h2>Timer</h2>
</div>

<div class="inner-container">
    <div class="dashboard timer-dashboard">
        <div class="timer dashboard-item">
            <div class="dashboard-item-title">
                <h3>Let's get productive!</h3>
            </div>
            <div class="dashboard-item-content">
                {{stop-watch initial=initial hours=hours minutes=minutes seconds=seconds}}

                {{#if initial}}
                    <span class="btn green-btn" {{action "start"}}>Start</span>
                {{else}}
                    <h3 class="timer">{{hours}}:{{minutes}}:{{seconds}}</h3>
                {{/if}}
            </div>
        </div>
    </div>
</div>
