<div class="title">
    <h2>Projects</h2>
    <div class="action-group">{{#link-to "projects.new"}}{{fa-icon "plus"}}{{/link-to}}</div>
    <div class="toggle-group subtitle">
        {{toggle-button text='Active' toggled=active_f act=(action 'filter')}}
        {{toggle-button text='Inactive' toggled=inactive_f act=(action 'filter')}}
    </div>
</div>

<div class="inner-container">
    {{#each data as |proj|}}
        <div class="project-item">
            <div class="project-title">
                <h3>{{#link-to "projects.view" proj.id}}{{proj.title}}{{/link-to}}</h3>
                <div class="action-group">
                    {{#link-to "projects.edit" proj.id}}{{fa-icon "pencil"}}{{/link-to}}
                    {{delete-button delete=(action "delete" proj)}}
                </div>
            </div>
            {{# if proj.description}}<p class="description">{{proj.description}}</p>{{/if}}
        </div>
    {{/each}}

    {{outlet}}
</div>
